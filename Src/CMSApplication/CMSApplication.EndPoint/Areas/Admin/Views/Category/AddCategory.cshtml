@{
    ViewData["Title"] = "Add Category";
}


<div class="container-fluid">


    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Server Side</h4>
                <form method="post" asp-area="Admin" asp-controller="Category" asp-action="AddCategory">

                    <div class="form-row">


                        <div class="col-md-4 mb-3">
                            <label for="CategoryName">Category Name :</label>
                            <input type="text" class="form-control is-valid" id="CategoryName" name="CategoryName" placeholder="Category Name" required="">
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="ParentCategory">Parent Category :</label>

                            <select class="custom-select" id="ParentCategory" name="categoryParent" asp-items="@ViewBag.Categories">
                                <option value="0">Is Parent</option>
                            </select>
                        </div>
                    </div>




                    <button class="btn btn-primary" type="submit">Add Category</button>

                </form>
            </div>
        </div>
    </div>


</div>