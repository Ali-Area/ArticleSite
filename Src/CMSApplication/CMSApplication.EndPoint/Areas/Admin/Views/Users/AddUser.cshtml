@using CMSApplication.EndPoint.Areas.Admin.Models.ViewModels.UsersViewModels

@model AddUserViewModel

@{
    ViewData["Title"] = "Add new User";
}



<div class="row">
    <div class="col-12">
        <div class="card card-body">
            <h4 class="card-title">Add new User</h4>
            <div class="row">
                <div class="col-sm-12 col-xs-12">
                    <form asp-area="Admin" asp-controller="Users" asp-action="AddUser" method="post">

                        <span class="text-danger">@Html.ValidationSummary()</span>
                        <div class="form-group">
                            <label for="exampleInputEmail111">Name</label>
                            <input type="text" class="form-control" id="exampleInputEmail111" placeholder="Enter Name" asp-for="Name">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail12">Email/UserName</label>
                            <input type="email" class="form-control" id="exampleInputEmail12" placeholder="Enter Email/UserName" asp-for="Email">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword11">Password</label>
                            <bdi><input type="text" class="form-control" id="exampleInputPassword11" placeholder="Password" asp-for="Password"></bdi>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword12">Confirm Password</label>
                            <input type="password" class="form-control" id="exampleInputPassword12" placeholder="Confirm Password" asp-for="ConfirmPassword">
                        </div>

                        <div class="form-group">
                            <label for="roleInput" class="col-2 col-form-label">Role</label>

                            <select class="form-control" id="roleInput" asp-for="Role"> 
                                <option value="user">User</option> 
                                <option value="admin">Admin</option>
                            </select>

                        </div>

                        <button type="submit" class="btn btn-success m-r-10">Submit</button>
                        <button type="submit" class="btn btn-dark">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


